ln2=`sed -n 2p "$x".blasttest| cut -d$'\t' -f 1`
echo "$x"
echo "$ln1"
echo "$ln2"
case "$ln1" in
  cps-1)
    case "$ln2" in
    cpsK2cpsK14)
     vys="14"
     ;;
     cpsK1cpsK1/2-T)
      vys="1"
     ;;
     cpsK1cpsK1/2-C)
      vys="1"
     ;;
     *)
      vys="serotype not determined"
     ;;
     esac
     ;;
   cps-2)
    case "$ln2" in
    cpsK2cpsK14)
     vys="2"
     ;;
     cpsK1cpsK1/2-T)
      vys="1-2"
     ;;
