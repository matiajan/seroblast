#!/bin/bash
#spoustet z adresare s .fasta soubory po assembly
#precte nazev *.fasta souboru a problastuje ho proti databazi Ssuis_SerotypingX.fasta. Tim urci serotyp izolatu S. suis
for x in *.fasta
  do blastn -query "$x" -db /DATADISK/biodata/blastdb/Ssuis_Serotyping3v3.fasta -task megablast -dust no -outfmt "6 sseqid evalue score ppos" -max_target_seqs 2 -out "$x".blasttest
#vytvoreni hlavicky s nazvem kontigu a jeji zkraceni na cislo vzorku
echo "$x" > head
cut -c 1-3 head > shorthead
#rozliseni serotypu 2vs1/2 a 1vs14 a pridani vysledku, z radku 1 a 2 vybere do promenne jen prvni sloupec
