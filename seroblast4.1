echo "$vys" > "$x".vysl
cat shorthead "$x".vysl "$x".blasttest > "$x".vysle
#odstraneni zalamovani radku a oddeleni sloupcu tabem 
sed ':a;N;$!ba;s/\n/\t/g' "$x".vysle > "$x".merged
done
