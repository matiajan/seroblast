#!/bin/bash
#run from folder containing Streptococcus suis genomes in multiple fasta format with .fasta suffix
#read name of *.fasta file and blast it against Ssuis_SerotypingX.fasta database. Presence of recN gene will be tested and serotype will be determined.
for x in *.fasta
  do blastn -query "$x" -db /home/matiasovicj/blastdb/Ssuis/Ssuis_Serotyping6-NK-V3.fasta -task megablast -dust no -outfmt "6 sseqid evalue score ppos" -max_target_seqs 5 -out "$x".blasttest

#take lines from blast results containing recN result and take only first line
grep 'recN' "$x".blasttest | head -1 > "$x".blastrecN
#prepare blastrecN result for final table 
cut -f 2,3,4 "$x".blastrecN > "$x".blastrecN2
#take first line from blast results containing all non recN and non cpsK results
grep -v 'recN' "$x".blasttest | grep -v '^cpsK.' | grep -v 'NK241-cps29-2' | grep -v 'NK219-NCL25-2' | head -1 > "$x".blastcps
#take first line from blast results containing any cpsK results
grep '^cpsK.' "$x".blasttest | head -1 > "$x".blastcpsK
#take first line from blast results containing any NK241-cps29-2 results
grep 'NK241-cps29-2' "$x".blasttest | head -1 > "$x".NK241-cps29-2
#test if the "$x".NK241-cps29-2 is empty; case it is, add 0
if [ -s ""$x".NK241-cps29-2" ]; then
    echo
else
    echo "0" > ""$x".NK241-cps29-2"
fi
#take first line from blast results containing any NK219-NCL25-2 results
grep 'NK219-NCL25-2' "$x".blasttest | head -1 > "$x".NK219-NCL25-2
