cpsK=`sed -n 1p "$x".blastcpsK | cut -d$'\t' -f 1`
NK241=`sed -n 1p "$x".NK241-cps29-2 | cut -d$'\t' -f 1`
NK219=`sed -n 1p "$x".NK219-NCL25-2 | cut -d$'\t' -f 1`
